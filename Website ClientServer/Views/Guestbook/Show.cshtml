@model WebApplication1.Models.GuestBookEntry

@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>
<p>

    @{
        bool hasPermission = (bool)ViewData["hasPermission"];


        <h2>
            Guestbook Entry
        </h2>
        <dl>
            <dt>Name:</dt>
            <dd>@Model.Name</dd>
            <dt>Date Added:</dt>
            <dd>@Model.DateAdded</dd>
            <dt>Email:</dt>
            <dd>@Model.Email</dd>
            <dt>Message:</dt>
            <dd>@Model.Message</dd>
        </dl>
    }
    @if (ViewBag.hasPermission)
    {
        <a href="@Url.Action("Edit", "Guestbook", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <form action="@Url.Action("Delete", "Guestbook", new { id = Model.Id })" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
        </form>
    

    }
<a href="@Url.Action("Index", "Guestbook")" class="btn btn-secondary">Back to Entries</a>

